{% extends 'base.html.twig' %}

{% block title %}Etudiants index{% endblock %}

{% block body %}
    <h1>Etudiants index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>Niveau</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.nom }}</td>
                <td>{{ etudiant.prenom }}</td>
                <td>{{ etudiant.age }}</td>
                <td>{{ etudiant.niveau }}</td>
                <td>
                    <a href="{{ path('etudiants_show', {'id': etudiant.id}) }}">show</a>
                    <a href="{{ path('etudiants_edit', {'id': etudiant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('etudiants_new') }}">Create new</a>
{% endblock %}
